@model IList<Model.Entity.Funcao>
@{
    ViewData["Title"] = "Aulas";
}
<nav class="clean container">
    <div class="nav-wrapper">
        <div class="col s12">
            <span class="left">
                <a id="paginaPrincipal" href="@Url.Action("Index", "Principal")" class="breadcrumb">Principal</a>
                <a href="#" class="breadcrumb">Cadastro</a>
                <a id="paginaAula" href="@Url.Action("Index", "Aula")" class="breadcrumb"><strong>Aulas</strong></a>
            </span>
        </div>
    </div>
</nav>

<div class="row container">
    <div class="col s12 l12">
        <a id="cadastrarAula" class="btn waves-effect waves-light modal-trigger right" href="#cadastrarAulaModal">Cadastrar Aula</a>
    </div>
</div>

<div id="cadastrarAulaModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="flow-text center">CADASTRAR AULA</h4>
        </div>
        <br /><br />

        <div class="col s12 l12">
            <form class="col s12 l12" id="">

                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>Escolha a Turma</option>
                        <option value="1">Turma x</option>
                        <option value="2">Turma y</option>
                        <option value="3">Turma z</option>
                    </select>
                    <label>Turma</label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="Ex: Di032...." id="codigoAula" type="text" class="validate">
                    <label for="codigoAula">Codigo da Turma</label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="Ex: 14" id="diaAula" type="text" class="validate">
                    <label for="diaAula">Dia da Aula</label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="Diego Souza" id="professorTurma" type="text" class="validate" disabled>
                    <label for="professorTurma">Professor da Turma</label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="Judo" type="text" id="modalidade" class="validate" disabled>
                    <label for="modalidade">Modalidade</label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="Infantil" id="faixaEtaria" type="text" class="validate" disabled>
                    <label for="faixaEtaria">Faixa Etária</label>
                </div>


                <div class="input-field col s3">
                    <input placeholder="Seg, Ter, Sab" id="diasSemanas" type="text" class="validate" disabled>
                    <label for="diasSemanas">Dias da semana</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="12:00" id="dataAulaInicio" type="text" class="validate" disabled>
                    <label for="dataAulaInicio">Horário inicio</label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="12:30" id="dataAulaFim" type="text" class="validate" disabled>
                    <label for="dataAulaFim">Horário final</label>
                </div>


            </form>
        </div>


    </div>
    <div class="modal-footer">
        <a id="fecharCadastrarAula" href="#!" class="modal-close btn-flat" style="background-color:inherit; border:inherit; color: black">Fechar</a>
        <a id="cadastrarAula" class="waves-effect waves-light btn modal-trigger right btnCadastrar" onclick="">Cadastrar</a>
    </div>
</div>

<div class="row container">
    <div class="col s12 l12">

        <table class="highlight centered tabela">
            <thead>
                <tr>
                    <th>Código Aula</th>
                    <th>Turma</th>
                    <th>Professor</th>
                    <th>Faixa Etaria</th>
                    <th>Dias da Aula</th>
                    <th>Inicio</th>
                    <th>Final</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>T010</td>
                    <td>Turma 012</td>
                    <td>Diego Souza</td>
                    <td>Infantil</td>
                    <td>Seg, Ter, Sab</td>
                    <td>13:30</td>
                    <td>14:00</td>
                    <td>
                        <a id="editarCargo" class="btn-floating btn-sm waves-effect waves-light yellow modal-trigger" href="#modalEditar"><i class="material-icons" style="background-color:#f79f00">create</i></a>
                        <a id="deletarCargo" class="btn-floating btn-sm waves-effect waves-light red modal-trigger" href="#modalDeletar"><i class="material-icons">delete_forever</i></a>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>
<div id="modalEditar" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="flow-text center" id="editarAulaModal">Editar Dados da Aula 'tal'</h4>
        </div>
        <br /><br />

        <div class="input-field col s6">
            <select>
                <option value="" disabled selected>Escolha a Turma</option>
                <option value="1">Turma x</option>
                <option value="2">Turma y</option>
                <option value="3">Turma z</option>
            </select>
            <label>Turma</label>
        </div>

        <div class="input-field col s3">
            <input placeholder="Di032" id="codigoAula" type="text" class="validate">
            <label for="codigoAula">Codigo da Turma</label>
        </div>

        <div class="input-field col s3">
            <input placeholder="Ex: 14" id="diaAula" type="text" class="validate">
            <label for="diaAula">Dia da Aula</label>
        </div>

        <div class="input-field col s3">
            <input placeholder="Diego Souza" id="professorTurma" type="text" class="validate" disabled>
            <label for="professorTurma">Professor da Turma</label>
        </div>

        <div class="input-field col s3">
            <input placeholder="Judo" type="text" id="modalidade" class="validate" disabled>
            <label for="modalidade">Modalidade</label>
        </div>

        <div class="input-field col s3">
            <input placeholder="Infantil" id="faixaEtaria" type="text" class="validate" disabled>
            <label for="faixaEtaria">Faixa Etária</label>
        </div>


        <div class="input-field col s3">
            <input placeholder="Seg, Ter, Sab" id="diasSemanas" type="text" class="validate" disabled>
            <label for="diasSemanas">Dias da semana</label>
        </div>

        <div class="input-field col s6">
            <input placeholder="12:00" id="dataAulaInicio" type="text" class="validate" disabled>
            <label for="dataAulaInicio">Horário inicio</label>
        </div>

        <div class="input-field col s6">
            <input placeholder="12:30" id="dataAulaFim" type="text" class="validate" disabled>
            <label for="dataAulaFim">Horário final</label>
        </div>

        <h4 class="flow-text center subtitleModal">MATRICULAS ATRELADAS</h4>
        <div class="input-field col s12">
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
            <div class="chip">Diego Souza</div>
        </div>


    </div>
    <div class="modal-footer">
        <a id="fecharEditar" href="#!" class="modal-close btn-flat" style="background-color:inherit; border:inherit; color: black">Fechar</a>
        <a id="editar" class="waves-effect waves-light btn modal-trigger right btnCadastrar">Atualizar</a>
    </div>
</div>


<div id="modalDeletar" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4 id="deletarAulaModal">Tem certeza que deseja deletar a aula 'tal'?</h4>
        </div>
        <div class="col s12 l12">
            <div class="input-field col s4">
                <input placeholder="Ex: T01, T02" id="" type="text" id="codigoTurma" class="validate" disabled>
                <label for="codigoTurma">Código Turma</label>
            </div>

            <div class="input-field col s4">
                <select>
                    <option value="" disabled selected>Escolha a Turma</option>
                </select>
                <label>Turma</label>
            </div>

            <div class="input-field col s4">
                <input placeholder="Ex: 31/10/199" id="dataAula" type="text" class="validate">
                <label for="dataAula">Data da Aula</label>
            </div>

            <div class="input-field col s6">
                <select>
                    <option value="" disabled selected>Escolha o Curso</option>
                </select>
                <label>Curso</label>
            </div>

            <div class="input-field col s6">
                <select>
                    <option value="" disabled selected>Escolha o Período</option>
                </select>
                <label>Período do Curso</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a id="fecharDeletar" href="#!" class="modal-close btn-flat" style="background-color:inherit; border:inherit; color: black">Fechar</a>
        <a id="deletar" class="waves-effect waves-light btn modal-trigger right btnCadastrar">Deletar</a>
    </div>
</div>
@section scripts{
    <script>
        $('.chips').chips();
       
    </script>
}