            </tr>

        </tbody>
    </table>

    <div class="row containerConfigurado">
        <div class="col s12 l12">
            <a id="gerarPDF" href="#!" class="btn right" onclick="fazPDF()">Gerar PDF</a>
        </div>
    </div>

</div>


<script src='https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.65/pdfmake.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.65/vfs_fonts.js'></script>

<script>

    let valorDebito = 314;
    let valorCredito = 432;
    let valorDinheiro = 4325

    var docDefinition = {
        content: [
            {
                text: 'Relatorio de Pagamento\n\n',
                style: 'title',

            },
            {
                text: [
                    'Pagamento em ',
                    { text: 'DINHEIRO', fontSize: 15, bold: true },
                    `: R$${valorDinheiro}`,
                    '\n\n',
                ],

            },
            {
                text: [
                    'Pagamento em ',
                    { text: 'DEBITO', fontSize: 15, bold: true },
                    `: R$${valorDebito}`,
                    '\n\n',
                ],

            },
            {
                text: [
                    'Pagamento em ',
                    { text: 'CREDITO', fontSize: 15, bold: true },
                    `: R$${valorCredito}`,
                    '\n\n',
                ],

            },
            
        ],
        styles: {
            title: {
                fontSize: 18,
                bold: true,
                alignment: 'center'
            },

        }
    }

    const fazPDF = () => {
        pdfMake.createPdf(docDefinition).open();
    }

</script>