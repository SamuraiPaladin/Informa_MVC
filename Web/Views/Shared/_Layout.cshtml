<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - inForma</title>
    <!-- Google Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/materialize/css/materialize.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link href="~/Content/paginas/principal.css" rel="stylesheet" />
    <link href="~/Content/weather-icons-master/css/weather-icons-wind.min.css" rel="stylesheet" />
    <link href="~/Content/data-tables-content/dataTables.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>
<body>
    <!-- TOP SIDE -->
    <nav style="background-color: #af2405;">
        <div class="nav-wrapper row " style="background-color: #af2405;">
            <ul class="left hide-on-med-and-down">
                <li>
                    <a href="#" data-target="slide-out" class="sidenav-trigger show-on-large">
                        <i class="material-icons">menu</i>
                    </a>
                </li>
                <li>
                    <a asp-controller="Principal" href="@Url.Action("Index","Principal")" asp-action="Index" style="position:relative" class="brand-logo"><img src="~/imgs/informa.png" width="200" class="img-responsive"></a>
                </li>
            </ul>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a id="principal" href="@Url.Action("Index","Principal")">Principal</a></li>
                <li><a id="unidade" href="@Url.Action("Index","Unidade")">Unidade</a></li>
                <li id="mensalidades"></li>
                    
                @*<li id="mensalidades"><a href="@Url.Action("Index","Mensalidade")">Situação de Alunos<span class="new badge" data-badge-caption="Pendência" style="background-color: darkred;" id="retornaLenght">@ViewBag.Quantidade</span></a></li>*@
                    
                
            </ul>
        </div>
    </nav>

    <ul id="slide-out" class="sidenav">
        <li>
            <div class="user-view" style="height:80px">
                <div class="background" style="background-color: #af2405;">
                    <img src="~/imgs/icon-informa.png" class="right" width="50">
                    <p class="white-text container">
                        <span><strong>inForma©</strong> - Natação Golfinho</span>
                        <br />
                        <span style="margin-top: -20px;">v1.2</span>
                    </p>
                </div>
                <!--<img class="circle" src="~/imgs/avatar-batman.png">-->

                
            </div>
        </li>
        <li><a class="subheader">Módulos</a></li>
        <li>
            <ul class="collapsible">
                <li>
                    <div id="cadastros" class="collapsible-header">
                        <i class="material-icons" style="color: grey;">edit</i>
                        <strong>Cadastros</strong>
                        <i class="material-icons right" id="arrow">arrow_drop_down</i>
                    </div>

                    <div class="collapsible-body">
                        <ul>
                            <li>
                                <a id="cadastroUnidade" href="@Url.Action("Index","Unidade")"><span class="insideLink">Unidade</span></a>
                            </li>
                            <li>
                                <a id="cadastroModalidade" href="@Url.Action("Index","Modalidade")"><span class="insideLink">Modalidade</span></a>
                            </li>
                            <li>
                                <a id="cadastroCargo" href="@Url.Action("Index","Funcao")"><span class="insideLink">Cargo</span></a>
                            </li>
                            <li>
                                <a id="cadastroColaborador" href="@Url.Action("Index","Colaborador")"><span class="insideLink">Colaborador</span></a>
                            </li>
                            <li>
                                <a id="cadastroTurma" href="@Url.Action("Index","Turma")"><span class="insideLink">Turma</span></a>
                            </li>
                            <li>
                                <a id="cadastroAula" href="@Url.Action("Index","Aula")"><span class="insideLink">Aulas</span></a>
                            </li>
                        </ul>

                    </div>
                </li>
            </ul>
        </li>

        <li>
            <div id="matricula" class="collapsible-header" onClick="redirecionaPaginaMatricula()">
                <i class="material-icons" style="color: grey;">recent_actors</i>
                <strong>Matricula</strong>
            </div>
        </li>


        <li>
            <ul class="collapsible">
                <li>
                    <div id="financeiro" class="collapsible-header">
                        <i class="material-icons" style="color: grey;">money</i>
                        <strong>Financeiro</strong>
                        <i class="material-icons right" id="arrow">arrow_drop_down</i>
                    </div>
                    <div class="collapsible-body">
                        <ul>
                            <li>
                                <a id="financeiroMensalidade" class="" href="@Url.Action("Index","Mensalidade")"><span class="insideLink">Mensalidades</span></a>
                            </li>
                            <li>
                                <a id="financeiroAluno" class="" href="@Url.Action("Index","Inadimplentes")"><span class="insideLink">Alunos Inadimplentes</span></a>
                            </li>
                        </ul>

                    </div>
                </li>
            </ul>
        </li>
        <li>
            <div class="divider"></div>
        </li>

        <li><a class="subheader">Outro submenu</a></li>

    </ul>


    <div class="row">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - inForma
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/menu.js"></script>
    <script src="~/Scripts/materialize/materialize.min.js"></script>
    <script src="~/Scripts/temperaturaAndLocale.js"></script>
    <script src="~/Scripts/data-tables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/data-tables/dataTables.bootstrap4.min.js"></script>


    @RenderSection("Scripts", required: false);
<script>

        const redirecionaPaginaMatricula = () => {
            window.location.href="@Url.Action("Index", "Matricula")"
        }
    $(document).ready(function () {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("QuantidadeDeAtrasados", "Principal")",
                    success: function (data) {
                        if (data === 0) {
                            $("#mensalidades").append("<a href='@Url.Action("Index","Mensalidade")'>Situação de Alunos</a>");
                        } else if(data  > 1 ){
                            $("#mensalidades").append("<a href='@Url.Action("Index","Mensalidade")'>Situação de Alunos<span class='new badge' data-badge-caption='Pendências' style='background-color: darkred;' id='retornaLenght'>"+data+"</span></a>")
                        } else {
                            $("#mensalidades").append("<a href='@Url.Action("Index","Mensalidade")'>Situação de Alunos<span class='new badge' data-badge-caption='Pendência' style='background-color: darkred;' id='retornaLenght'>"+data+"</span></a>")
                        }

                    }, error: function (ex) {
                        alert("Erro: " + ex.status);
                    }
                });
                }
        );
</script>

</body>